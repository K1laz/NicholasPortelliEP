@model List<Domain.Poll>
<h2>All Polls</h2>

@foreach (var poll in Model)
{
    <div style="margin-bottom: 20px;">
        <h4>@poll.Title</h4>
        <p>
            <strong>Option 1</strong><br />
            <strong>Option 2</strong><br />
            <strong>Option 3</strong><br />
            <em>Created on: @poll.DateCreated.ToString("g")</em>
        </p>

        <a asp-action="Vote" asp-route-id="@poll.Id" class="btn btn-primary">Vote</a>
        <form asp-action="Results" asp-route-id="@poll.Id" method="get" style="display:inline">
            <button type="submit" class="btn btn-info">View Results</button>
        </form>
    </div>
}
